<Application x:Class="Task5.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Task5"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Storyboard x:Key="ColorAnimationStoryboard">
            <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Ellipse.Fill).(GradientBrush.GradientStops)[0].(GradientStop.Color)">
                <EasingColorKeyFrame KeyTime="0:0:0" Value="Red"/>
                <EasingColorKeyFrame KeyTime="0:0:0.2" Value="Orange"/>
                <EasingColorKeyFrame KeyTime="0:0:0.4" Value="Yellow"/>
                <EasingColorKeyFrame KeyTime="0:0:0.6" Value="Green"/>
                <EasingColorKeyFrame KeyTime="0:0:0.8" Value="Blue"/>
                <EasingColorKeyFrame KeyTime="0:0:1" Value="Purple"/>
            </ColorAnimationUsingKeyFrames>
        </Storyboard>
    </Application.Resources>
</Application>
